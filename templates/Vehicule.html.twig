      </div>
    </header>

    <div class="header-overlay"></div>

    <!-- Filtres -->
    <div class="filtres">
      <label for="marque">Marque:</label>
      <select id="marque" name="marque">
        <option value="Toutes">Toutes</option>
        <option value="Citroën">Citroën</option>
        <option value="Peugeot">Peugeot</option>
        <option value="Opel">Opel</option>
        <option value="Renault">Renault</option>
      </select>

      <label for="prix">Prix maximum:</label>
      <select id="prix">
        <option value="">Tous</option>
        <option value="0">0 - 4,999</option>
        <option value="5000">5,000 - 9,999</option>
        <option value="10000">10,000 - 14,999</option>
        <option value="15000">15,000 - 19,999</option>
      </select>

      <label for="annee">Année minimum:</label>
      <select id="annee">
        <option value="">Toutes</option>
        <option value="2000">2000-2009</option>
        <option value="2010">2010-2019</option>
        <option value="2020">2020-2023</option>
      </select>

      <button id="filtrer">Filtrer</button>
    </div>

